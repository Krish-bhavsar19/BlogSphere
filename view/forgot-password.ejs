    <title>Forgot Password - BlogSphere</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/style/theme.css">
    <style>
        .auth-container {
            min-height: 100vh;
            background: var(--primary-beige);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .auth-card {
            background: white;
            border-radius: 0;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 3rem;
            max-width: 450px;
            width: 100%;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-title {
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--dark-brown);
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: -1px;
        }

        .auth-subtitle {
            color: var(--text-light);
            font-size: 1.1rem;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-floating .form-control {
            border: 2px solid var(--soft-gray);
            border-radius: 0;
            padding: 1rem;
            height: auto;
        }

        .form-floating .form-control:focus {
            border-color: var(--warm-orange);
            box-shadow: 0 0 0 0.2rem rgba(210, 105, 30, 0.25);
        }

        .form-floating label {
            color: var(--text-light);
            padding: 1rem;
        }

        .auth-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--text-light);
        }

        .auth-footer a {
            color: var(--warm-orange);
            text-decoration: none;
            font-weight: 600;
        }

        .auth-footer a:hover {
            color: var(--dark-brown);
        }

        .btn:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        /* Updated CSS for button color */
        .btn-primary {
            background-color: var(--dark-brown);
            border-color: var(--dark-brown);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--warm-orange);
            border-color: var(--warm-orange);
            color: white;
        }

        .btn-primary:active, .btn-primary:focus {
            background-color: var(--warm-orange) !important;
            border-color: var(--warm-orange) !important;
            color: white !important;
            box-shadow: 0 0 0 0.2rem rgba(210, 105, 30, 0.25) !important;
        }

        .btn-primary:disabled {
            background-color: var(--warm-orange);
            border-color: var(--warm-orange);
            color: white;
            opacity: 0.7;
        }
    </style>
</head>

<body>
    <%- include('partials/nav') %>

    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1 class="auth-title">
                    <i class="fas fa-key me-2"></i>Reset Password
                </h1>
                <p class="auth-subtitle">Enter your email to receive a reset link</p>
            </div>

            <% if (success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <%= success %>
                </div>
            <% } %>
            <% if (error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <%= error %>
                </div>
            <% } %>

            <form action="/user/forgot-password" method="POST" id="forgotPasswordForm">
                <div class="form-floating">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    <label for="email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                </div>

                <button type="submit" class="btn btn-primary w-100" id="submitBtn">
                    <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                </button>
            </form>

            <div class="auth-footer">
                <p class="mb-0">Remembered your password? <a href="/user/login">Login here</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', function (event) {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Sending...';
        });

        if (window.location.search.includes('success') || window.location.search.includes('error')) {
            const url = new URL(window.location);
            url.search = '';
            window.history.replaceState({}, document.title, url.toString());
        }
    </script>
</body>

</html>

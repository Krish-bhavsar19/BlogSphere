<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - BlogSphere</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/style/theme.css">
    <style>
        .profile-container {
            min-height: 100vh;
            background: var(--primary-beige);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .profile-card {
            background: white;
            border-radius: 0;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 3rem;
            max-width: 500px;
            width: 100%;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .profile-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .profile-title {
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--dark-brown);
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: -1px;
        }

        .profile-subtitle {
            color: var(--text-light);
            font-size: 1.1rem;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin: 0 auto 2rem;
            border: 4px solid var(--warm-orange);
            display: block;
        }

        .form-floating {
            margin-bottom: 1.5rem;
        }

        .form-floating .form-control {
            border: 2px solid var(--soft-gray);
            border-radius: 0;
            padding: 1rem;
            height: auto;
        }

        .form-floating .form-control:focus {
            border-color: var(--warm-orange);
            box-shadow: 0 0 0 0.2rem rgba(210, 105, 30, 0.25);
        }

        .form-floating label {
            color: var(--text-light);
            padding: 1rem;
        }

        .profile-actions {
            margin-top: 2rem;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 1.5rem;
            color: var(--warm-orange);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .back-link:hover {
            color: var(--dark-brown);
        }

        @media (max-width: 768px) {
            .profile-card {
                padding: 2rem;
            }
            
            .profile-title {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/nav') %>

    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-header">
                <h1 class="profile-title">
                    <i class="fas fa-user-cog me-2"></i>Profile Settings
                </h1>
                <p class="profile-subtitle">Update your account information</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <%= error %>
                </div>
            <% } %>

            <div class="text-center">
                <img src="<%= user.profileImageURL %>" alt="Profile" class="profile-avatar"
                    onerror="this.onerror=null;this.src='/images/man-avatar.jpg';">
            </div>

            <form action="/user/profile" method="POST" enctype="multipart/form-data">
                <div class="form-floating">
                    <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                    <label for="username"><i class="fas fa-user me-2"></i>Username</label>
                </div>

                <div class="form-floating">
                    <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    <label for="email"><i class="fas fa-envelope me-2"></i>Email Address</label>
                </div>

                <div class="form-floating">
                    <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*">
                    <label for="profileImage"><i class="fas fa-camera me-2"></i>Change Profile Photo</label>
                </div>

                <div class="profile-actions">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-save me-2"></i>Update Profile
                    </button>
                </div>
            </form>

            <a href="/user/dashboard" class="back-link">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('.profile-card form').addEventListener('submit', function(e) {
            document.querySelectorAll('.form-error').forEach(el => el.remove());
            let valid = true;
            
            const username = document.getElementById('username');
            if (!username.value.trim() || username.value.trim().length < 3) {
                showError(username, 'Username must be at least 3 characters.');
                valid = false;
            }
            
            const email = document.getElementById('email');
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!email.value.trim() || !emailPattern.test(email.value.trim())) {
                showError(email, 'Please enter a valid email address.');
                valid = false;
            }
            
            const profileImage = document.getElementById('profileImage');
            if (profileImage.files.length > 0) {
                const file = profileImage.files[0];
                if (!file.type.startsWith('image/')) {
                    showError(profileImage, 'Profile photo must be an image file.');
                    valid = false;
                }
            }
            
            if (!valid) e.preventDefault();
            
            function showError(input, message) {
                const err = document.createElement('div');
                err.className = 'form-error text-danger mb-2';
                err.textContent = message;
                input.parentNode.insertBefore(err, input.nextSibling);
            }
        });
    </script>
</body>

</html> 